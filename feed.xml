---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Ultracycling races</title>
    <description>Ultra-distance bikepacking races for endurance cyclists</description>
    <link>{{ page.url | absolute_url }}</link>
    <atom:link href="{{ page.url | absolute_url }}feed.xml" rel="self" type="application/rss+xml"/>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    
    {% assign races_with_dates = site.data.races | where_exp: "race", "race.start != 'TBA' and race.start != nil" | sort: 'start' | reverse %}
    {% assign races_without_dates = site.data.races | where_exp: "race", "race.start == 'TBA' or race.start == nil" %}
    
    {% for race in races_with_dates limit:50 %}
      <item>
        <title>{{ race.name | xml_escape }}</title>
        <description>
          <![CDATA[
            <p><strong>Date:</strong> 
              {{ race.start | date: "%d.%m.%Y" }}
              {% if race.end and race.end != race.start %}
                - {{ race.end | date: "%d.%m.%Y" }}
              {% endif %}
            </p>
            <p><strong>Distance:</strong> {{ race.distance | default: "NA" }}</p>
            <p><strong>Elevation:</strong> {{ race.elevation | default: "NA" }}</p>
            <p><strong>Start Location:</strong> {{ race.start-location | default: "TBA" }}</p>
            {% if race.finish-location %}
              <p><strong>Finish Location:</strong> {{ race.finish-location }}</p>
            {% endif %}
            <p><strong>Support Mode:</strong> {{ race.support-mode | capitalize }}</p>
            <p><strong>Route:</strong> {{ race.route | capitalize }}</p>
            {% if race.time-limit %}
              <p><strong>Time Limit:</strong> {{ race.time-limit }}</p>
            {% endif %}
          ]]>
        </description>
        {% if race.link %}
          <link>{{ race.link }}</link>
          <guid isPermaLink="false">{{ race.link }}-{{ race.start }}</guid>
        {% else %}
          <guid isPermaLink="false">{{ page.url | absolute_url }}#{{ race.name | slugify }}-{{ race.start }}</guid>
        {% endif %}
        <pubDate>{{ race.start | date_to_rfc822 }}</pubDate>
      </item>
    {% endfor %}
    
    {% for race in races_without_dates %}
      <item>
        <title>{{ race.name | xml_escape }} (Date TBA)</title>
        <description>
          <![CDATA[
            <p><strong>Date:</strong> TBA</p>
            <p><strong>Distance:</strong> {{ race.distance | default: "NA" }}</p>
            <p><strong>Elevation:</strong> {{ race.elevation | default: "NA" }}</p>
            <p><strong>Start Location:</strong> {{ race.start-location | default: "TBA" }}</p>
            {% if race.finish-location %}
              <p><strong>Finish Location:</strong> {{ race.finish-location }}</p>
            {% endif %}
            <p><strong>Support Mode:</strong> {{ race.support-mode | capitalize }}</p>
            <p><strong>Route:</strong> {{ race.route | capitalize }}</p>
            {% if race.time-limit %}
              <p><strong>Time Limit:</strong> {{ race.time-limit }}</p>
            {% endif %}
          ]]>
        </description>
        {% if race.link %}
          <link>{{ race.link }}</link>
          <guid isPermaLink="false">{{ race.link }}-tba</guid>
        {% else %}
          <guid isPermaLink="false">{{ page.url | absolute_url }}#{{ race.name | slugify }}-tba</guid>
        {% endif %}
        <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
      </item>
    {% endfor %}
  </channel>
</rss>
